<div class="container">
  <h1>Artist in the Database</h1>

  <% if !@artists.nil? %>
  <ul>
    <% @artists.each do |artist| %>
      <li>
        <%= link_to artist_path(artist) do %>
          <% artist.photos.each do |photo| %>
            <%= image_tag photo.picture.thumbnail %>
            <p><%= artist.name %></p>
          <% end %>
        <% end %>
      </li>
    <% end %>
  <% end %>
  </ul>
</div>
